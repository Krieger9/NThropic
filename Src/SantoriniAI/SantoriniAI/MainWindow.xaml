<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="SantoriniAI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SantoriniAI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="SantoriniAI"
    xmlns:controls="using:SantoriniAI.Controls">

    <Grid x:Name="Root" Padding="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Add CellView controls to each cell in the 5x5 grid with explicit size -->
            <controls:CellView DataContext="{Binding Cell}" Grid.Row="0" Grid.Column="0" Width="100" Height="100"/>
            <controls:CellView DataContext="{Binding Cell}" Grid.Row="0" Grid.Column="1" Width="100" Height="100"/>
            <controls:CellView DataContext="{Binding Cell}" Grid.Row="0" Grid.Column="2" Width="100" Height="100"/>
            <controls:CellView DataContext="{Binding Cell}" Grid.Row="0" Grid.Column="3" Width="100" Height="100"/>
            <controls:CellView DataContext="{Binding Cell}" Grid.Row="0" Grid.Column="4" Width="100" Height="100"/>

            <controls:CellView DataContext="{Binding Cell}" Grid.Row="1" Grid.Column="0" Width="100" Height="100"/>
            <controls:CellView DataContext="{Binding Cell}" Grid.Row="1" Grid.Column="1" Width="100" Height="100"/>
            <controls:CellView DataContext="{Binding Cell}" Grid.Row="1" Grid.Column="2" Width="100" Height="100"/>
            <controls:CellView DataContext="{Binding Cell}" Grid.Row="1" Grid.Column="3" Width="100" Height="100"/>
            <controls:CellView DataContext="{Binding Cell}" Grid.Row="1" Grid.Column="4" Width="100" Height="100"/>

            <controls:CellView DataContext="{Binding Cell}" Grid.Row="2" Grid.Column="0" Width="100" Height="100"/>
            <controls:CellView DataContext="{Binding Cell}" Grid.Row="2" Grid.Column="1" Width="100" Height="100"/>
            <controls:CellView DataContext="{Binding Cell}" Grid.Row="2" Grid.Column="2" Width="100" Height="100"/>
            <controls:CellView DataContext="{Binding Cell}" Grid.Row="2" Grid.Column="3" Width="100" Height="100"/>
            <controls:CellView DataContext="{Binding Cell}" Grid.Row="2" Grid.Column="4" Width="100" Height="100"/>

            <controls:CellView DataContext="{Binding Cell}" Grid.Row="3" Grid.Column="0" Width="100" Height="100"/>
            <controls:CellView DataContext="{Binding Cell}" Grid.Row="3" Grid.Column="1" Width="100" Height="100"/>
            <controls:CellView DataContext="{Binding Cell}" Grid.Row="3" Grid.Column="2" Width="100" Height="100"/>
            <controls:CellView DataContext="{Binding Cell}" Grid.Row="3" Grid.Column="3" Width="100" Height="100"/>
            <controls:CellView DataContext="{Binding Cell}" Grid.Row="3" Grid.Column="4" Width="100" Height="100"/>

            <controls:CellView DataContext="{Binding Cell}" Grid.Row="4" Grid.Column="0" Width="100" Height="100"/>
            <controls:CellView DataContext="{Binding Cell}" Grid.Row="4" Grid.Column="1" Width="100" Height="100"/>
            <controls:CellView DataContext="{Binding Cell}" Grid.Row="4" Grid.Column="2" Width="100" Height="100"/>
            <controls:CellView DataContext="{Binding Cell}" Grid.Row="4" Grid.Column="3" Width="100" Height="100"/>
            <controls:CellView DataContext="{Binding Cell}" Grid.Row="4" Grid.Column="4" Width="100" Height="100"/>
        </Grid>

        <Button x:Name="MyButton" Click="MyButton_Click" Grid.Row="1" HorizontalAlignment="Stretch">Click Me</Button>
    </Grid>
</Window>
