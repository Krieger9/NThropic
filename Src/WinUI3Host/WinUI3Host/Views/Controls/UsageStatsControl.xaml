<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="WinUI3Host.Views.Controls.UsageStatsControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WinUI3Host.Views.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <StackPanel>
            <TextBlock Text="Input Tokens:" />
            <TextBlock Text="{Binding InputTokens.Value, Mode=OneWay}" />
            
            <TextBlock Text="Output Tokens:" />
            <TextBlock Text="{Binding OutputTokens}" />
            
            <TextBlock Text="Cache Creation Input Tokens:" />
            <TextBlock Text="{Binding CacheCreationInputTokens}" />
            
            <TextBlock Text="Cache Read Input Tokens:" />
            <TextBlock Text="{Binding CacheReadInputTokens}" />
        </StackPanel>
    </Grid>
</UserControl>
